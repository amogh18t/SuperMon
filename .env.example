# SuperMon SDLC Automation Platform - Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://supermon:supermon123@localhost/supermon
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI SERVICES
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_ENDPOINT=https://generativelanguage.googleapis.com/v1/models/gemini-2.5-pro:generateContent

# Optional: OpenAI API key (alternative to Gemini)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Anthropic API key (alternative to Gemini)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# SLACK INTEGRATION
# =============================================================================
# Get these from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your_slack_bot_token_here
SLACK_APP_TOKEN=xapp-your_slack_app_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_CHANNEL_ID=your_slack_channel_id_here

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================
# Get these from: https://developers.facebook.com/docs/whatsapp
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# =============================================================================
# WEBEX INTEGRATION
# =============================================================================
# Get these from: https://developer.webex.com/
WEBEX_ACCESS_TOKEN=your_webex_access_token_here
WEBEX_BOT_TOKEN=your_webex_bot_token_here

# =============================================================================
# NOTION INTEGRATION
# =============================================================================
# Get these from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# Get these from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=https://github.com/yourusername/yourrepo

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Mail MCP Settings (for testing)
MAILTRAP_HOST=sandbox.smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USERNAME=your_mailtrap_username
MAILTRAP_PASSWORD=your_mailtrap_password
FROM_EMAIL=bot@example.com
EMAIL_TO=your_email@example.com
MAIL_MCP_ENDPOINT=http://localhost:9000/send-email

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
ACCESS_TOKEN_EXPIRE_MINUTES=30
MAX_AGENTS=10
AGENT_TIMEOUT=300
DEFAULT_MEETING_DURATION=60
MEETING_REMINDER_MINUTES=15
MAX_FILE_SIZE=10485760

# =============================================================================
# MCP SERVER ENDPOINTS
# =============================================================================
SLACK_MCP_ENDPOINT=http://localhost:8001
WHATSAPP_MCP_ENDPOINT=http://localhost:8002
WEBEX_MCP_ENDPOINT=http://localhost:8003
NOTION_MCP_ENDPOINT=http://localhost:8004
GITHUB_MCP_ENDPOINT=http://localhost:8005
POSTGRESQL_MCP_ENDPOINT=http://localhost:8006
FILESYSTEM_MCP_ENDPOINT=http://localhost:8007
DOCKER_MCP_ENDPOINT=http://localhost:8008
REDIS_MCP_ENDPOINT=http://localhost:8009
TLDV_MCP_ENDPOINT=http://localhost:8010

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:3001"]
